{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": false
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["src"]
}
